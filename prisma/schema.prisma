
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int       @id @default(autoincrement())
  email     String    @unique
  password  String
  reports   Report[]  // Relation une-à-plusieurs avec le modèle Report.
}

model Report {
  id               Int      @id @default(autoincrement())
  userId           Int
  siteName         String
  pdfUrlMobile     String?
  pdfUrlDesktop    String?
  createdAt        DateTime @default(now())
  
  desktopPerformanceScores DesktopPerformanceScore[]
  mobilePerformanceScores MobilePerformanceScore[]

  user             User     @relation(fields: [userId], references: [id])
}

model DesktopPerformanceScore {
  id            Int      @id @default(autoincrement())
  reportId      Int
  performance   Int
  seo           Int
  bestPractices Int
  accessibility Int

  report        Report   @relation(fields: [reportId], references: [id])
}

model MobilePerformanceScore {
  id            Int      @id @default(autoincrement())
  reportId      Int
  performance   Int
  seo           Int
  bestPractices Int
  accessibility Int

  report        Report   @relation(fields: [reportId], references: [id])
}



